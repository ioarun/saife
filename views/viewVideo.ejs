<html lang='en'>
   <head>
      <meta charset='utf-8' />
      <link href='/media-player.css' rel='stylesheet' />
      
   </head>
    <body class="body-bg">
        <div class="container-video">
            <div id="c-video" class="c-video">
                <div class="share" style="text-align: center;">
                    <div class="buttons">
                        <button class="fas fa-share-square" id="share"></button>
                    </div>
                </div>
                <video id='video' class="video" muted="muted" autoplay="true" poster="data:image/gif,AAAA">
                    <source src="https://drive.google.com/uc?id=0ByuvNaTkATl-RzlzNXVTMVd5V00" type="video/mp4">
                    </source>
                </video>
                <div class="controls">
                    <div class="orange-bar">
                        <div class="orange-juice">

                        </div>
                    </div>
                    <div class="buttons">
                            <button class="fa fa-pause-circle" id="play-pause"></button>
                            <button class='fa fa-redo' id='replay'></button>
                            <button class='fas fa-expand' id='fullscreen'></button>
                    </div>         
                </div>
            </div>
        </div>
        <script src='/js/media-player.js'></script>
   </body>
</html>
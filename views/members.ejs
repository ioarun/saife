<body>
    <div class="container">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th class="col text-center" id="#">#</th>
                    <th class="col text-center" id="Name">Name</th>
                    <th class="col text-center" id="Status">Status</th>
                    <th class="col text-center" id="Details">Details</th>
                    <th class="col text-center" id="Video">Video</th>
                </tr>
            </thead>
            <tbody>
                <% if (members.length> 0) { %>
                    <% members.forEach((member, index)=> { %>
                        <tr>
                            <th class="text-center" scope="row">
                                <%= index+1 %>
                            </th>
                            <td class="text-center">
                                <%= member.name %>
                            </td>
                            <td class="text-center status">
                                <%= member.status %>
                                <% if(member.status === "Fallen!") { %>
                                    <span class='d-inline-flex mb-0 circle status-indicator-fall'></span>
                                <% } else if(member.status === "All Good!") { %>
                                    <span class='d-inline-flex mb-0 circle status-indicator-good'></span>
                                <% } %>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-small btn-outline-primary" onclick="viewMemberDetails()">View
                                    Details</button>
                            </td>
                            <td class="text-center">
                                <button class="btn btn-small btn-outline-primary" onclick="viewFallVideo()">View Video</button>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %>
            </tbody>
        </table>
    </div>
</body>

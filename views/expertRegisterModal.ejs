<div id="expertRegisterModal" class="modal form-round">
    <div class="modal-content border-0 shadow-none p-2">
        <div id="alert_placeholder"></div>
            <h5 class="text-center mt-3">
                <i class="fas fa-user-plus"></i> Register
            </h2>
                <%- include('./partials/messages') %>
                <form>
                <div class="row justify-content-center">
                    <div class="form-group col-12 col-md-6">
                       
                        <label for="firstName">First Name</label>
                        <input type="text" id="expertFirstName" name="firstName" class="form-control" placeholder="Enter First Name"
                            value="<%= typeof firstName != 'undefined' ? firstName : '' %>" />
                    </div>
                    <div class="form-group col-12 col-md-6">
                   
                        <label for="lastName">Last Name</label>
                        <input type="text" id="expertLastName" name="lastName" class="form-control" placeholder="Enter Last Name"
                            value="<%= typeof lastName != 'undefined' ? lastName : '' %>" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12 col-md-12">
                       
                        <label for="registration">Expert Registration Number</label>
                        <input type="number" id="expertRego" name="registration" class="form-control" placeholder="Registration Number"
                            value="<%= typeof registration != 'undefined' ? registration : '' %>" />
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-12 col-md-6">
                       
                        <label for="email">Email</label>
                        <input type="email" id="expert-email-register" name="email" class="form-control" placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group col-12 col-md-6">
                       
                        <label for="phone">Phone Number</label>
                        <input type="tel" id="expertPhone" name="phone" class="form-control" placeholder="1234536783"
                            value="<%= typeof phone != 'undefined' ? phone : '' %>" />
                    </div>
                </div>
                
                <div class="row">
                    <div class="form-group col-12 col-md-6">
                      
                        <label for="password">Password</label>
                        <input type="password" id="expert-password-register" name="password" class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group col-12 col-md-6">
                       
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="expert-password2" name="password2" class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-5">
                        <div class="d-grid"><button id="expertRegister-btn"  class="btn btn-saife">Register</button>
                        </div>
                    </div>
                </div>
                </form>
                <div class="row justify-content-center">
                    <div class="col-12">
                        <p class="lead">Have An Account? <a href="/users/login">Login</a></p>
                    </div>
                </div>
        </div>
</div>